{
    "tasks": {
        "check": "deno check **/*.ts",
        "fmt": "deno fmt",
        "fmt:check": "deno fmt --check",
        "lint": "deno lint",
        "build": "deno bundle --platform=deno main.ts -o build/cli.js",
        "local-install": "deno install -fr --global --allow-run --allow-write --allow-read --allow-env --allow-net --name workspace-manager ./build/cli.js"
    },
    "imports": {
        "@cliffy/ansi": "jsr:@cliffy/ansi@1.0.0-rc.8",
        "@cliffy/command": "jsr:@cliffy/command@^1.0.0-rc.8",
        "@cliffy/internal": "jsr:@cliffy/internal@1.0.0-rc.8",
        "@cliffy/keycode": "jsr:@cliffy/keycode@^1.0.0-rc.8",
        "@cliffy/prompt/input": "https://cdn.jsdelivr.net/gh/ball6847/deno-cliffy@442ed09e0b4822e7a45212a9796d8615d1feae85/prompt/input.ts",
        "@cliffy/prompt": "jsr:@cliffy/prompt@^1.0.0-rc.8",
        "@std/dotenv": "jsr:@std/dotenv@^0.225.5",
        "@std/fmt/colors": "jsr:@std/fmt@^1.0.8/colors",
        "@std/path": "jsr:@std/path@^1.1.1",
        "@std/text": "jsr:@std/text@^1.0.15",
        "@std/yaml": "jsr:@std/yaml@^1.0.8",
        "typescript-result": "npm:typescript-result@^3.5.1",
        "zod": "npm:zod@^3.25.67"
    },
    "fmt": {
        "exclude": [
            "node_modules",
            "dist",
            "build"
        ],
        "include": [
            "**/*.ts"
        ],
        "indentWidth": 4,
        "lineWidth": 120,
        "proseWrap": "preserve",
        "singleQuote": false,
        "useTabs": true
    },
    "lint": {
        "exclude": [
            "node_modules",
            "dist",
            "build",
            "generated"
        ],
        "include": [
            "**/*.ts",
            "**/*.tsx",
            "**/*.js",
            "**/*.jsx"
        ],
        "rules": {
            "tags": [
                "recommended"
            ]
        }
    },
    "nodeModulesDir": "auto"
}
