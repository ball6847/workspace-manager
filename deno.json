{
  "name": "@ball6847/workspace-manager",
  "version": "0.2.2",
  "exports": "./main.ts",
  "tasks": {
    "check": "deno check **/*.ts",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "lint": "deno lint",
    "build": "deno bundle --platform=deno main.ts -o build/cli.js",
    "local-install": "deno install -fr --global --allow-run --allow-write --allow-read --allow-env --allow-net --config deno.json --name workspace-manager ./build/cli.js"
  },
  "imports": {
    "@117/mutex": "jsr:@117/mutex@^1.0.8",
    "@cliffy/ansi": "jsr:@cliffy/ansi@1.0.0-rc.8",
    "@cliffy/command": "jsr:@cliffy/command@^1.0.0-rc.8",
    "@cliffy/internal": "jsr:@cliffy/internal@1.0.0-rc.8",
    "@cliffy/keycode": "jsr:@cliffy/keycode@^1.0.0-rc.8",
    "@cliffy/prompt": "jsr:@cliffy/prompt@^1.0.0-rc.8",
    "@cliffy/table": "jsr:@cliffy/table@^1.0.0-rc.8",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.5",
    "@std/fmt/colors": "jsr:@std/fmt@^1.0.8/colors",
    "@std/path": "jsr:@std/path@^1.1.1",
    "@std/text": "jsr:@std/text@^1.0.15",
    "@std/yaml": "jsr:@std/yaml@^1.0.8",
    "typescript-result": "npm:typescript-result@^3.5.1",
    "zod": "npm:zod@^3.25.67"
  },
  "fmt": {
    "exclude": [
      "node_modules",
      "dist",
      "build"
    ],
    "include": [
      "**/*.ts"
    ],
    "indentWidth": 4,
    "lineWidth": 120,
    "proseWrap": "preserve",
    "singleQuote": false,
    "useTabs": true
  },
  "lint": {
    "exclude": [
      "node_modules",
      "dist",
      "build",
      "generated"
    ],
    "include": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.js",
      "**/*.jsx"
    ],
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "nodeModulesDir": "auto"
}
